{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@src": ["src"],
      "config": ["src/config"],
      "config/*": ["src/config/*"],
      "controllers": ["src/controllers"],
      "controllers/*": ["src/controllers/*"],
      "models": ["src/data/models"],
      "models/*": ["src/data/models/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
